<script>
const quiz = [
    {
        question: "1. Adanya ciri-ciri khusus pada setiap individu mengakibatkan . . . . .",
        options: [
            "Terjadi keseragaman makhluk hidup",
            "Adanya keanekaragaman individu makhluk hidup",
            "Jumlah makhluk hidup bertambah banyak",
            "Jumlah makhluk hidup tetap",
            "Jumlah makhluk hidup di dunia berkurang"
        ],
        answer: 1
    },
    {
        question: "2. Kelompok tumbuhan yang merupakan tingkatan satu gen adalahâ€¦.",
        options: [
            "Mangga manalagi, mangga geding, dan mangga harum manis",
            "Jambu, mangga dan papaya",
            "Kelapa sawit, kelapa gading dan aren",
            "Aren, jambu dan kelapa sawit",
            "Bawang merah, bawang putih dan bawang daun"
        ],
        answer: 0
    },
    {
        question: "3. Disebuah kolam terdapat populasi:\nIkan kecil, fitoplankton, zooplankton, ikan besar, pengurai\nAliran energi yang terjadi pada ekosistem kolam tersebut adalahâ€¦",
        options: [
            "1-3-2-4-5",
            "1-2-4-3-5",
            "2-3-1-4-5",
            "2-1-3-4-5",
            "2-4-3-1-5"
        ],
        answer: 2
    },
    {
        question: "4. Sistem pemberian nama ilmiah suatu organisme yang menggunakan dua kata disebut . . . . .",
        options: [
            "Kunci tata nama",
            "Klasifikasi",
            "Binomial nomenklatur",
            "Sistem klasifikasi",
            "Sistem tata nama dua kata"
        ],
        answer: 2
    },
    {
        question: "5. Tingkat taksonomi dari yang paling rendah ke paling tinggi adalah . . . . .",
        options: [
            "Divisi-kelas-ordo-family-genus-spesies",
            "Divisi-ordo-kelas-famili-genus-spesies",
            "Spesies-genus-famili-ordo-kelas-divisi",
            "Spesies-divisi-kelas-ordo-family-genus",
            "Filum-divisi-ordo-famili-genus-spesies"
        ],
        answer: 2
    }
];

let currentQuestion = 0;
let score = 0;

const questionEl = document.getElementById("question");
const optionsEl = document.getElementById("options");
const nextBtn = document.getElementById("next");
const scoreboard = document.getElementById("scoreboard");

function showQuestion() {
    questionEl.textContent = quiz[currentQuestion].question;
    optionsEl.innerHTML = "";
    quiz[currentQuestion].options.forEach((option, index) => {
        const button = document.createElement("button");
        button.textContent = option;
        button.onclick = () => selectOption(index);
        optionsEl.appendChild(button);
    });
    nextBtn.style.display = "none";
}

function selectOption(index) {
    const buttons = optionsEl.querySelectorAll("button");
    buttons.forEach(btn => btn.disabled = true);

    if(index === quiz[currentQuestion].answer){
        buttons[index].style.backgroundColor = "green";
        score += 10;
    } else {
        buttons[index].style.backgroundColor = "red";
        buttons[quiz[currentQuestion].answer].style.backgroundColor = "green";
    }

    nextBtn.style.display = "block";
    scoreboard.textContent = "Score: " + score;
}

nextBtn.onclick = () => {
    currentQuestion++;
    if(currentQuestion < quiz.length){
        showQuestion();
    } else {
        questionEl.textContent = "ðŸŽ‰ Quiz Selesai! ðŸŽ‰\nSkor akhir: " + score;
        optionsEl.innerHTML = "";
        nextBtn.style.display = "none";
    }
}

showQuestion();
</script>
